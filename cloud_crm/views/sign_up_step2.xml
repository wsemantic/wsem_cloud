<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="signup_step2" name="Custom Signup Step 2">
        <t t-call="website.layout">
            <div class="container">
                <h1>Registro de Usuario - Paso 2</h1>
                <p>Selecciona los m贸dulos que deseas instalar en tu base de datos.</p>
                <form action="/custom/signup_step2" method="post" id="signup_step2_form">
                    <div class="row">
                        <!-- Iterar sobre la lista fija de m贸dulos -->
                        <t t-foreach="modules" t-as="module">
                            <div class="col-md-4">
                                <div class="module-box">
                                    <img t-att-src="module['icon']" alt="" class="img-fluid"/>
                                    <label>
                                        <input type="checkbox" name="modules" t-att-value="module['technical_name']"/>
                                        <span t-esc="module['name']"/>
                                    </label>
                                </div>
                            </div>
                        </t>
                    </div>
                    <button type="submit" class="btn btn-primary">Registrar y Crear Base de Datos</button>
                </form>
            </div>
            <!-- Incluir el archivo JavaScript para la selecci贸n de m贸dulos -->
            <script src="/path/to/signup_step2.js"></script>
        </t>
    </template>
</odoo>


