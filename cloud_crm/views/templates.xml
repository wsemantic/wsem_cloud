<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="extend_auth_signup_fields" inherit_id="auth_signup.fields">
        <xpath expr="//div[@class='mb-3 field-name']" position="after">
            <div class="mb-3 field-dni">
                <label for="dni">Su DNI</label>
                <input type="text" name="dni" t-att-value="dni" id="dni" class="form-control form-control-sm" placeholder="00000000A"
                    required="required" t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>
            <div class="mb-3 field-phone">
                <label for="phone">Su Telefono</label>
                <input type="text" name="phone" t-att-value="phone" id="phone" class="form-control form-control-sm" 
                    required="required" t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>
            <div class="mb-3 field-address">
                <label for="address">Su direccion</label>
                <input type="text" name="address" t-att-value="address" id="address" class="form-control form-control-sm" 
                    required="required" t-att-readonly="'readonly' if only_passwords else None"
                    t-att-autofocus="'autofocus' if login and not only_passwords else None" />
            </div>
            <div class="mb-3 field-price">
                <label for="price">Su Plan</label>
                <select name="price" class="form-control form-control-sm">
                    <option value="community">Community</option>
                    <option value="standard">Standard</option>
                    <option value="custom">Custom</option>
                </select>
            </div>
        </xpath>
    </template>

    <template id="portal_my_contracts" name="My Contracts Cloud URL" inherit_id="contract.portal_my_contracts">
        <xpath expr="//thead//tr" position="inside">
            <th>Cloud URL</th>
        </xpath>
        
        <xpath expr="//tbody//tr" position="inside">
            <td>
                <a t-att-href="contract.partner_id.cloud_url">
                    <span t-field="contract.partner_id.cloud_url" />
                </a>
            </td>
        </xpath>
    </template>

    <template id="portal_contract_page_inherit" inherit_id="contract.portal_contract_page">
        <!-- Fix missing avatar images -->
        <xpath expr="//img[@src='/web/static/src/img/user_menu_avatar.png']" position="attributes">
            <attribute name="src">/web/static/img/user_menu_avatar.png</attribute>
        </xpath>
        <!-- IBAN form -->
        <xpath expr="//div[@id='product_information']" position="before">
            <div class="row mt32" id="iban_information">
                <div class="col-12 col-md-6">
                    <form t-att-action="'/my/contracts/%s/iban' % contract.id" method="post">
                        <div class="row mb-2 mb-sm-1">
                            <div class="col-12 col-sm-4">
                                <label for="iban"><strong>IBAN</strong></label>
                            </div>
                            <div class="col-12 col-sm-8">
                                <input type="text" name="iban" id="iban" t-att-value="contract.iban or ''" class="form-control" required="required"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-primary">Guardar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
