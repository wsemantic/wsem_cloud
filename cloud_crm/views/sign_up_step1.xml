<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="auth_signup_step1" inherit_id="auth_signup.fields">
        <!-- Extender la vista auth_signup.fields para añadir campos personalizados -->
        <xpath expr="//div[@class='mb-3 field-name']" position="after">
            <!-- Campo Empresa -->
            <div class="mb-3 field-company_name">
                <label for="company_name">Empresa</label>
                <input type="text" name="company_name" id="company_name" required="required" class="form-control form-control-sm" />
            </div>
            <!-- Campo DNI -->
            <div class="mb-3 field-dni">
                <label for="dni">DNI</label>
                <input type="text" name="dni" id="dni" required="required" class="form-control form-control-sm" placeholder="00000000A" />
            </div>
            <!-- Campo Dirección -->
            <div class="mb-3 field-address">
                <label for="address">Dirección</label>
                <input type="text" name="address" id="address" required="required" class="form-control form-control-sm" />
            </div>
            <!-- Campo Teléfono -->
            <div class="mb-3 field-phone">
                <label for="phone">Teléfono</label>
                <input type="tel" name="phone" id="phone" required="required" class="form-control form-control-sm" />
            </div>
            <!-- Campo Subdominio (Calculado) -->
            <div class="mb-3 field-subdomain">
                <label for="subdomain_url">URL de la Base de Datos</label>
                <input type="text" name="subdomain" id="subdomain_url" readonly="readonly" class="form-control form-control-sm" />
            </div>
        </xpath>

        <!-- Incluir el archivo JavaScript para el cálculo del subdominio dinámico -->
        <xpath expr="//body" position="inside">
            <script src="/path/to/signup_step1.js"></script>
        </xpath>
    </template>
</odoo>

