<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="signup_error" name="Error en el registro">
        <t t-call="website.layout">
            <div class="container mt-5 mb-5">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="alert alert-danger" role="alert">
                            <h2 class="h4 mb-3">Ha ocurrido un problema</h2>
                            <p class="mb-0">
                                <t t-esc="error or 'Se produjo un error inesperado durante el registro.'"/>
                            </p>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="/signup_step1" class="btn btn-primary">Volver al formulario</a>
                            <a href="/" class="btn btn-outline-secondary">Ir al inicio</a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
